<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:orientation="vertical"
    >
 <!--타이틀 한 번 없애봄
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실시간 모니터링"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>
        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <View
                android:id="@+id/aiSpeechPulse2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="30dp"
                android:background="@drawable/cirlcle"
                android:backgroundTint="@color/green"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/aiSpeechPulse1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="30dp"
                android:background="@drawable/cirlcle"
                android:backgroundTint="@color/green"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/aiSpeech"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="30dp"
                android:background="@drawable/cirlcle"
                android:backgroundTint="@color/green"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/aiSpeechText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                android:text="break"
                android:textAlignment="center"
                />
        </FrameLayout>
    </LinearLayout>
    <Switch
        android:id="@+id/showTextOrGraph"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:thumbTint="@color/switch_thumb_color"
        android:trackTint="@color/gray"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/currentInfo"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"

        >
        <LinearLayout
            android:id="@+id/currentRpm"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/rpmTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPM"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rpmValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/currentSpeed"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/speedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEED"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/speedValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <com.example.carscanner.CustomGraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        />

</LinearLayout>
