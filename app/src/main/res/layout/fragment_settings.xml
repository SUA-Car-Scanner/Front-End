<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:paddingTop="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/userInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 정보"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/userNameLabel"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/userNameEdit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:enabled="false"
            android:hint="이름 입력"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@drawable/underline"
            android:backgroundTint="@color/underline_tint"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userEmailLabel"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="e-mail"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/userEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="e-mail 입력"
            android:textSize="16dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@drawable/underline"
            android:backgroundTint="@color/underline_tint"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userCarLabel"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="차량 정보"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/userCarEdit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="차량 정보 입력"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@drawable/underline"
            android:backgroundTint="@color/underline_tint" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="급발진 알람 활성화"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <Switch
            android:id="@+id/suddenWarningSwitch"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:thumbTint="@color/switch_thumb_color"
            android:trackTint="@color/gray"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="급발진 알람 횟수"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/suddenWarningCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:gravity="center_vertical" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:text="급발진 신고 전화"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/callPhoneEdit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:hint="전화번호 입력"
            android:textSize="16dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@drawable/underline"
            android:backgroundTint="@color/underline_tint"/>

        <TextView
            android:id="@+id/editCallPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:focusable="true"
            android:text="수정"
            android:textColor="@color/blue"
            android:layout_gravity="center_vertical"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
